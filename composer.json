{
    "name": "mmi/mmi",
    "type": "library",
    "description": "MMi Framework Library",
    "keywords": ["mmi", "framework"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mariusz Miłejko",
            "email": "mariusz@milejko.pl"
        },
        {
            "name": "Bartłomiej Wołos",
            "email": "funfel@onet.pl"
        },
        {
            "name": "Maciej Pawłowski",
            "email": "mac@macu.eu"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "ext-bcmath": "*",
        "ext-date": "*",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "ext-hash": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-ldap": "*",
        "ext-mbstring": "*",
        "ext-pcre": "*",
        "ext-pdo": "*",
        "ext-reflection": "*",
        "ext-session": "*",
        "ext-spl": "*",
        "monolog/monolog": "1.*",
        "graylog2/gelf-php": "1.5.*",
        "php-di/php-di": "^6.3",
        "symfony/console": "^5.0",
        "symfony/dotenv": "^5.0",
        "doctrine/annotations": "^1.11"
    },
    "scripts": {
        "test:infection": "infection --show-mutations --only-covered",
        "test:security-checker": "security-checker security:check",
        "report:metrics": "phpmetrics --report-html=./web/build/metrics ./src",
        "fix:phpcbf": "phpcbf",
        "fix:php-cs-fixer": "php-cs-fixer fix src && php-cs-fixer fix src",
        "fix:all": [
            "@fix:phpcbf",
            "@fix:php-cs-fixer"
        ],
        "test:phpmd": "phpmd ./src text phpmd.xml.dist",
        "test:phpcs": "phpcs",
        "test:phpunit": "export XDEBUG_MODE=coverage && phpunit --coverage-clover ./.phpunit.coverage.clover.xml --coverage-html ./web/build/phpunit",
        "test:phpstan": "phpstan --level=1 --memory-limit=512M --xdebug analyse src tests -c phpstan-baseline.neon",
        "test:all": [
            "@test:security-checker",
            "@test:phpcs",
            "@test:phpunit",
            "@test:phpstan",
            "@test:phpmd",
            "@test:infection"
        ]
    },
    "autoload": {
        "psr-4": {
            "Mmi\\": "src/Mmi",
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Mmi\\": "tests/Mmi"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.1-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "require-dev": {
        "mmi/mmi-build-toolkit": "^1.0"
    }
}
